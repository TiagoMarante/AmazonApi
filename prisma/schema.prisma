// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users in the system
model User {
  id          String  @id @default(cuid())
  username    String? @unique
  email       String? @unique
  password    String?
  cc          String?
  nif         String?
  permissions Role[]
  img         Img?    @relation(fields: [imgId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  imgId       String?
}

// Products in the system
model Product_Wharehouse {
  id          String     @id @default(cuid())
  name        String     @unique
  grossweight Float
  netWeight   Float
  width       Float
  lenght      Float
  hscode      String     @unique
  price_acq   Float
  price_aux   Float[]
  ean         String     @unique
  stock       Stock?
  suplier     Supplier[]

  img       Img?    @relation(fields: [imgId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  imgId     String?
  suplierId String?
}

// All supliers of a product
model Supplier {
  id           String @id @default(cuid())
  nif          String
  name         String
  address      String
  email        String
  quantity_box Float
  price_box    Float
  price_unit   Float


  Product_Wharehouse   Product_Wharehouse? @relation(fields: [product_WharehouseId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  product_WharehouseId String?
}

// Stock of a product
model Stock {
  id           String             @id @default(cuid())
  product      Product_Wharehouse @relation(fields: [product_WharehouseId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  currentStock Int
  neededStock  Int

  product_WharehouseId String @unique
}

// All images in the system
model Img {
  id     String   @id @default(cuid())
  photos String[]

  User               User[]
  Product_Wharehouse Product_Wharehouse[]
}

enum Role {
  STOCK_MANAGER
  SHIPMENT_MANAGER
  PACKER
  BOXING
  ADMIN
  CREATER
}
