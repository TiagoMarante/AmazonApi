// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(cuid())
  username    String? @unique
  email       String? @unique
  password    String?
  cc          String?
  nif         String?
  permissions Role[]
  img         Img?    @relation(fields: [imgId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  imgId       String?
}

model Stock {
  id           String             @id @default(cuid())
  product      Product_Wharehouse @relation(fields: [product_WharehouseId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  currentStock Int
  neededStock  Int

  product_WharehouseId String @unique
}

model Img {
  id     String   @id @default(cuid())
  photos String[]

  User               User[]
  Product_Wharehouse Product_Wharehouse[]
}

model Product_Wharehouse {
  id          String  @id @default(cuid())
  name        String  @unique
  grossweight Float
  netWeight   Float
  width       Float
  lenght      Float
  hscode      String  @unique
  price_acq   Float
  price_aux   Float[]
  ean         String  @unique
  stock       Stock?
  img         Img?    @relation(fields: [imgId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  imgId       String?
}

enum Role {
  STOCK_MANAGER
  SHIPMENT_MANAGER
  PACKER
  BOXING
  ADMIN
  CREATER
}
